@model SYGESTMunicipal.Areas.PATENTES.Models.Establishment
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutPATENTES.cshtml";
}
<br />
<h2 class="text-info">Eliminar a este establecimiento?</h2>
<br />
<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Id" class=" form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class=" form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5 colo-lg-4 text-right">
                <input onclick="abrirModal()" type="submit" value="Eliminar" id="btnEliminar"
                       class="btn btn-danger" @*style="width: 80%;"*@
                       asp-route-id="@Model" />
            </div>
            <br />
            <br />
            <br />
            <div class="col-md-5">
                <a asp-action="Index" type="button"
                   class="btn btn-success">Regresar </a>
            </div>
        </div>

    </div>
</form>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Eliminar Establecimiento', '¿Desea Eliminar Este Establecimiento?').then((result) => {
            if (result.value) {
                var viewEliminar = document.getElementById("viewEliminar");
                viewEliminar.submit();
                Swal.fire(
                    'Eliminado!',
                    'El establecimiento fue eliminada!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'El establecimiento no ha sido eliminado!!!:)',
                    'error'
                )
            }
        })
    }
</script>