@using SYGESTMunicipal.Utility
@model SYGESTMunicipal.Areas.PATENTES.Models.Establishment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutPATENTES.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaCIIU;
    List<SelectListItem> Lista1 = ViewBag.ListaApplicant;
    List<SelectListItem> Lista2 = ViewBag.ListaEstablishmentType;
    List<SelectListItem> Lista3 = ViewBag.ListaActivityType;
}

@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFPA))
{

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">

            <div class="row">
                <div class="col-lg-12">

                    <h3 class="page-header"><i class="fa fa-files-o"></i> Formulario de Registro de Establecimiento</h3>
                    <ol class="breadcrumb">

                        <li class="nav-item">
                            <i class="fa fa-th"></i>
                            <a class="nav-link" asp-area="PATENTES" asp-controller="Establishment" asp-action="Index"> Establecimiento</a>
                        </li>
                        <li><i class="fa fa-files-o"></i>Formulario</li>
                    </ol>
                </div>
            </div>

            <!-- Form validations -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Formulario
                        </header>
                        <div class="panel-body">
                            <div class="form">

                                <br />
                                <h2 class="text-info">Editar Establecimiento</h2>
                                <br />

                                <form method="post" asp-action="Edit" id="viewEditar">
                                    <div class="border backgroundWhite">
                                        <div asp-validation.summary="ModelOnly" class="text-danger"></div>

                                        <br>
                                        <h5 class="text-black-50">Datos Generales</h5>
                                        <br>


                                        <div class=" form-group row">
                                            <label asp-for="Name" class="col-form-label col-lg-2">Nombre</label>
                                            <div class="col-lg-9">
                                                <input asp-for="Name" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Name" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="CIIUId" class="col-form-label col-lg-2">Código CIIUI</label>
                                            <div class="col-lg-9">
                                                <select asp-for="CIIUId" class="form-control"
                                                        asp-items="@Lista"></select>
                                            </div>
                                            <span asp-validation-for="CIIUId" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="Description" class="col-form-label col-lg-2">Descripción de Actividad</label>
                                            <div class="col-lg-9">
                                                <input asp-for="Description" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Description" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="NFarm" class="col-form-label col-lg-2">Nº Finca</label>
                                            <div class="col-lg-9">
                                                <input asp-for="NFarm" class="form-control" />
                                            </div>
                                            <span asp-validation-for="NFarm" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="DesignNum" class="col-form-label col-lg-2">Nº Plano</label>
                                            <div class="col-lg-9">
                                                <input asp-for="DesignNum" class="form-control" />
                                            </div>
                                            <span asp-validation-for="DesignNum" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="WorkingHours" class="col-form-label col-lg-2">Horario de Trabajo</label>
                                            <div class="col-lg-9">
                                                <input asp-for="WorkingHours" class="form-control" />
                                            </div>
                                            <span asp-validation-for="WorkingHours" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="WMen" class="col-form-label col-lg-2">Cantidad Hombres Laborando</label>
                                            <div class="col-lg-9">
                                                <input asp-for="WMen" class="form-control" />
                                            </div>
                                            <span asp-validation-for="WMen" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="WWomen" class="col-form-label col-lg-2">Cantidad Mujeres Laborando</label>
                                            <div class="col-lg-9">
                                                <input asp-for="WWomen" class="form-control" />
                                            </div>
                                            <span asp-validation-for="WWomen" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="ApplicantId" class="col-form-label col-lg-2">Se Incluye Solicitante</label>
                                            <div class="col-lg-9">
                                                <select asp-for="ApplicantId" class="form-control"
                                                        asp-items="@Lista1"></select>
                                            </div>
                                            <span asp-validation-for="ApplicantId" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="WebPage" class="col-form-label col-lg-2">Dirección Página Web</label>
                                            <div class="col-lg-9">
                                                <input asp-for="WebPage" class="form-control" />
                                            </div>
                                            <span asp-validation-for="WebPage" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="SkilledWorkers" class="col-form-label col-lg-2">Cantidad Trabajadores Calificados</label>
                                            <div class="col-lg-9">
                                                <input asp-for="SkilledWorkers" class="form-control" />
                                            </div>
                                            <span asp-validation-for="SkilledWorkers" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="UnskilledWorkers" class="col-form-label col-lg-2">Cantidad de Trabajadores No Calificados</label>
                                            <div class="col-lg-9">
                                                <input asp-for="UnskilledWorkers" class="form-control" />
                                            </div>
                                            <span asp-validation-for="UnskilledWorkers" class=" text-danger"></span>
                                        </div>


                                        @*<br>
                                            <h5 class="text-black-50">Persona Fisica</h5>
                                            <br>*@


                                        <div class=" form-group row">
                                            <label asp-for="EstablishmentTypeId" class="col-form-label col-lg-2">Tipo de Establecimiento</label>
                                            <div class="col-lg-9">
                                                <select asp-for="EstablishmentTypeId" class="form-control"
                                                        asp-items="@Lista2"></select>
                                            </div>
                                            <span asp-validation-for="EstablishmentTypeId" class=" text-danger"></span>
                                        </div>

                                        <div class=" form-group row">
                                            <label asp-for="ActivityTypeId" class="col-form-label col-lg-2">Tipo de Actividad</label>
                                            <div class="col-lg-9">
                                                <select asp-for="ActivityTypeId" class="form-control"
                                                        asp-items="@Lista3"></select>
                                            </div>
                                            <span asp-validation-for="ActivityTypeId" class=" text-danger"></span>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                <input type="button" value="Editar" id="btnEditar"
                                                       class="btn btn-info" @*style="width: 80%;"*@
                                                       onclick="abrirModal()" />
                                            </div>
                                            <br />
                                            <br />
                                            <br />
                                            <div class="col-md-5">
                                                <a asp-action="Index" type="button"
                                                   class="btn btn-success">Regresar </a>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <!-- page end-->

        </section>
    </section>
    <!--main content end-->

}

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Modificar', '¿Realmente Desea modificar?').then((result) => {
            if (result.value) {
                var viewEditar = document.getElementById("viewEditar");
                viewEditar.submit();
                Swal.fire(
                    'Modificado!',
                    'Operación con éxito!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'Operación Fracasada!!!:)',
                    'error'
                )
            }
        })
    }
</script>
