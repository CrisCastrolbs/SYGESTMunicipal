@model SYGESTMunicipal.Areas.OFIM.Models.ViewModel.CupoAndActividadViewModel
@using SYGESTMunicipal.Utility
@using SYGESTMunicipal.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";

}


@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light" style="text-align:center;
                              background-color:darkslategray;width:100%;">
                Abrir Cupos para Inscripción a Actividades
            </h3>
        </div>
    </div>
    <br />

    <form asp-action="Create" asp-controller="Cupos" method="post" id="viewAgregar">
        <div class="container-fluid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Cupos.Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    @Html.TextAreaFor(m => m.Cupos.Descripcion, new { rows = "3", cols = "56", @class = "text-area" })
                </div>
                <span asp-validation-for="Cupos.Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Cupos.CupoMax" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Cupos.CupoMax" class="form-control" />
                </div>
                <span asp-validation-for="Cupos.CupoMax" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Cupos.IsActive" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input type="checkbox" asp-for="Cupos.IsActive" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Cupos.ActividadId" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <select id="ddlCategorylist" asp-for="Cupos.ActividadId" asp-items="Model.ActividadList.ToSelectListItem(Model.Cupos.ActividadId)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4 colo-lg-4 text-right">
                    <input type="button" value="Agregar" id="btnAgregar"
                           class="btn btn-success" style="width: 80%;"
                           onclick="abrirModal()" />
                </div>
                <div class="col-md-4 colo-lg-4 text-right">
                    <a asp-action="Index" class="btn btn-info"
                       style="width: 80%;">
                        Regresar a la lista
                    </a>
                </div>
            </div>

        </div>

    </form>
}

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updateEjeList() {
            var ejeSelected = document.getElementById("ddlCategorylist").value;
            $list = $('#EjeList');
            $.ajax({
                url: '/OFIM/Eje/GetEjes/' + ejeSelected,
                type: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    $list.append(' <ul class="list-group"> ');
                    for (i in results) {
                        $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                    }
                    $list.append('</ul>');
                }
            });
        }
        $(document).ready(function () {
            updateEjeList();
        });
        $("#ddlCategorylist").on("change", function () {
            updateEjeList();
        });
    </script>


    <script src="~/js/sweetalert2.js"></script>
    <script src="~/js/Utilitarios.js"></script>
    <script>
        function abrirModal() {
            verModal('Agregar Cupo', '¿Desea agregar el cupo?').then((result) => {
                if (result.value) {
                    var viewAgregar = document.getElementById("viewAgregar");
                    viewAgregar.submit();
                    Swal.fire(
                        'Agregado!',
                        'El cupo fue agregado!.',
                        'success'
                    )
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelado',
                        'El cupo no fue agregado!!!:)',
                        'error'
                    )
                }
            })
        }
    </script>

}