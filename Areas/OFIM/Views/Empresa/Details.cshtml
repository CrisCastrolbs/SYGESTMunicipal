@using SYGESTMunicipal.Utility
@model SYGESTMunicipal.Areas.OFIM.Models.ViewModel.EmpresaAndClasificacionViewModel
@using SYGESTMunicipal.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles de las Empresas
            </h3>
        </div>
    </div>
    <br />

    <form asp-action="Details" asp-controller="Empresa">
        <div class="container-fluid">
            <input type="hidden" asp-for="Empresa.ClasificacionID" />

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Clasificacion.Name" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <select manifest="ddlCategory" asp-for="Empresa.ClasificacionID" disabled
                            asp-items="Model.Clasificacion.ToSelectListItem(Model.Empresa.ClasificacionID)"
                            class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Name" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Imagen" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    @{
                        var base64 = Convert.ToBase64String(Model.Empresa.Imagen);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    <img src="@imgsrc" style="width:30%; border-radius:5px;border: 1px solid #bbb9b9;" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Manager" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.Manager" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Description" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.Description" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Direction" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.Direction" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.WebPage" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.WebPage" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Empresa.Telephone" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Empresa.Telephone" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_DetailsAndBackToListButton" model="Model.Empresa.Id" />
                </div>
            </div>
        </div>
    </form>
}