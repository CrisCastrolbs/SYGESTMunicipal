@model IEnumerable<TipoConsulta>
@using SYGESTMunicipal.Areas.OFIM.Models

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

<br />
<br />
<div class="<border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Lista de Tipo Consulta</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.NombreTipoConsulta)</th>
                    <th>@Html.DisplayNameFor(m => m.PersonaOFIM.PersonName)</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.NombreTipoConsulta)</td>
                        <td>@Html.DisplayFor(m => item.PersonaOFIM.PersonName)</td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.PersonaOFIMId" />
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <h3 style="color:red;">No existen tipos de Consultas registradas!...</h3>
        }
    </div>
</div>

