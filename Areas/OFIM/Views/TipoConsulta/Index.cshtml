@using SYGESTMunicipal.Utility
@model IEnumerable<TipoConsultaAndPersonaViewModel>
@using SYGESTMunicipal.Areas.OFIM.Models.ViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <br />
    <br />
    <div class="<border backgroundWhite">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-info">Lista de Tipo Consulta</h2>
            </div>
            <div class="col-6 text-right">
                <p>
                    <a asp-action="Create" class="btn btn-info">
                        <i class="fas fa-plus"></i>
                        &nbsp; Crear Nuevo
                    </a>
                </p>
            </div>
        </div>

        <br />

        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover .table-responsive" id="TbTipoConsultaa">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">

                            <th>@Html.DisplayNameFor(m => m.NombreTipoConsulta)</th>
                            <th>@Html.DisplayNameFor(m => m.PersonaOFIM)</th>


                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(m => item.NombreTipoConsulta)</td>
                                <td>@Html.DisplayFor(m => item.PersonaOFIM)</td>


                                <td style="width:300px">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@Model">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@Model">
                                            <i class="fas fa-list-alt"></i>
                                        </a>
                                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@Model">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3 style="color:red;">No existen tipos de Consultas registradas!...</h3>
            }
        </div>
    </div>

}