@using SYGESTMunicipal.Utility
@model SYGESTMunicipal.Areas.OFIM.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";

}

@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles de Categorias
            </h3>
        </div>
    </div>
    <br />
    <form asp-action="Details" asp-controller="Category" method="post">
        <div class="container-fluid">

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Name" class="col-form-label">Nombre</label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Name" readonly="readonly"
                           class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-5">
                    <a asp-action="Index" type="button"
                       class="btn btn-success">Regresar </a>
                </div>
            </div>

        </div>
    </form>
}