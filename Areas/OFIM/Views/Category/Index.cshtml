@using SYGESTMunicipal.Utility
@model IEnumerable<SYGESTMunicipal.Areas.OFIM.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}


@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <br />
    <br />

    <div class="<border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Lista de Categorias</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover .table-responsive" id="TbCategory">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">

                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            
                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(m => item.Name)</td>


                                <a>
                                    <partial name="_TableButtonPartialDelete" model="item.Id" />
                                </a>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3 style="color:red;">No existen Categorias registradas!...</h3>
            }
        </div>
    </div>

}