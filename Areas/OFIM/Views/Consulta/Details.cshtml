@model SYGESTMunicipal.Areas.OFIM.Models.ViewModel.ConsultaViewModel
@using SYGESTMunicipal.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}


<br />
<h2 class="text-info">Details TipoConsulta Items</h2>
<br />
<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="Consulta.ConsultaId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.HoraInicio" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.HoraInicio" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Consulta.Fecha" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Consulta.Fecha" readonly type="datetime" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.PersonaOFIMId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.PersonaOFIM.PersonName" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.TipoConsultaId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.TipoConsulta.NombreTipoConsulta" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.Motivo" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.Motivo" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(model => model.Consulta.Descripcion,
                    new { disabled = "disabled", cols = "46" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.RespuestaOfrecida" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.RespuestaOfrecida" readonly class="form-control" />
                </div>
           
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Consulta.HoraFin" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Consulta.HoraFin" readonly class="form-control" />
                </div>
            </div>

        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DetailsAndBackToListButton" model="Model.Consulta.ConsultaId" />
            </div>
        </div>
        <br />
    </div>
</form>


