@using SYGESTMunicipal.Utility
@model SYGESTMunicipal.Areas.OFIM.Models.Consulta
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaTipoConsulta;
    List<SelectListItem> Lista2 = ViewBag.ListaPersonaOFIM;
}

@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles de la Consulta
            </h3>
        </div>
    </div>
    <br />
    <form asp-action="Details" asp-controller="Medico" method="post">
        <div class="container-fluid">

            <div class="form-group row">
                <div class="col-md-2">
                    <label>Hora Atención:</label>
                </div>
                <div class="col-md-6">
                    <p id="timepicker">
                        <input asp-for="HoraInicio" type="text" readonly class="time start" /> a
                        <input asp-for="HoraFin" type="text" readonly class="time end" />
                    </p>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Fecha" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Fecha" readonly type="datetime" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="PersonaOFIMId" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <select asp-for="PersonaOFIMId" readonly
                            class="form-control"
                            asp-items="@Lista2"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="TipoConsultaId" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <select asp-for="TipoConsultaId" readonly
                            class="form-control"
                            asp-items="@Lista"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Motivo" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Motivo" readonly
                           class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Descripcion" readonly
                           class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="RespuestaOfrecida" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="RespuestaOfrecida" readonly
                           class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_DetailsAndBackToListButton" model="Model.TipoConsultaId" />
                </div>
            </div>
        </div>
    </form>
}