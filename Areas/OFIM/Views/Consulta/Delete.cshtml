@using SYGESTMunicipal.Utility
@model SYGESTMunicipal.Areas.OFIM.Models.Consulta
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}
@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFIM))
{
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light" style="text-align:center;
                              background-color:darkslategray;width:100%;">
                Eliminar una Consulta
            </h3>
        </div>
    </div>
    <br />
    <form method="post" asp-action="Delete">
        <div class="border backgroundWhite">
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="ConsultaId" class="col-form-label"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="ConsultaId" class=" form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="TipoConsultaId" class="col-form-label"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="TipoConsultaId" class=" form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="PersonaOFIMId" class="col-form-label"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="PersonaOFIMId" class=" form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-5 colo-lg-4 text-right">
                    <input onclick="abrirModal()" type="submit" value="Eliminar" id="btnEliminar"
                           class="btn btn-danger" @*style="width: 80%;"*@
                           asp-route-id="@Model" />
                </div>
                <br />
                <br />
                <br />
                <div class="col-md-5">
                    <a asp-action="Index" type="button"
                       class="btn btn-success">Regresar </a>
                </div>
            </div>

        </div>
    </form>
}

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Eliminar Consulta', '¿Desea Eliminar Esta Consulta?').then((result) => {
            if (result.value) {
                var viewEliminar = document.getElementById("viewEliminar");
                viewEliminar.submit();
                Swal.fire(
                    'Eliminado!',
                    'La consulta fue eliminada!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'La consulta no ha sido eliminada!!!:)',
                    'error'
                )
            }
        })
    }
</script>