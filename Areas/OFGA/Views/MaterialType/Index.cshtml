@model IEnumerable<SYGESTMunicipal.Areas.OFGA.Models.MaterialType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Tipo de Materiales</h2>

                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Home" asp-action="Index">Gestión Ambiental</a></li>
                <li>Tipo de Materiales</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="border backgroundWhite">
        <br />
        <form asp-controller="MaterialType" asp-action="Index" method="post">
            <div class="row">
                <div class="col-lg-2 text-right">
                    <a asp-action="Create" class="btn btn-info fa fa-plus-circle"
                       style="width:80%; height:100%;padding:12px;">
                        Agregar
                    </a>
                </div>
                @*<div class="col-md-2 col-lg-2 text-right">
                <a asp-controller="" asp-action="Index"
                   class="btn btn-info fa fa-arrow-circle-left"
                   style="width:100%; height:90%;padding:6px;">
                    Regresar al menú
                </a>
            </div>*@
            </div>
            <div class="col-md-12" style="color:black;"><hr /></div>
        </form>

            @if (Model.Count() > 0)
            {
                <table class="table table-hover .table-responsive" id="TbSolidWaste">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">

                            <th>@Html.DisplayNameFor(m => m.MaterialTypeName)</th>
                            <th>@Html.DisplayNameFor(m => m.Description)</th>

                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(m => item.MaterialTypeName)</td>
                                <td>@Html.DisplayFor(m => item.Description)</td>

                                <div class="col-md-6 text-right">
                                    <a><partial name="_TableButtonPartialDelete" model="item.MaterialTypeId" /></a>
                                </div>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h5 style="color:red;">No se encontraron registros!...</h5>
            }
        </div>
</main>
