@model SYGESTMunicipal.Areas.OFGA.Models.MaterialType
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Editar Categoría de Materiales</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Complaint" asp-action="Index">Categoeía de Materiales</a></li>
                <li>Editar Registro</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Editar
            </h3>
        </div>
    </div>
    <br />

    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Edit" id="viewEditar">
                    <div class="backgroundWhite">

                        <div class=" form-group row">
                            <div class=" col-2">
                                <h5><label asp-for="MaterialTypeId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-9">
                                <input asp-for="MaterialTypeId" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="MaterialTypeId" class=" text-danger"></span>
                        </div>
                        <div class=" form-group row">
                            <div class=" col-2">
                                <h5><label asp-for="MaterialTypeName" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-9">
                                <input asp-for="MaterialTypeName" class="form-control" />
                            </div>
                            <span asp-validation-for="MaterialTypeName" class=" text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2 col-lg-2">
                                <h5><label asp-for="Description" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9 col-lg-9">
                                <textarea asp-for="Description" rows="4" cols="50"
                                          class="form-control"> </textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="form-grouprow">
                            <div class="col-5 offset-2">
                                <partial name="_EditAndBackToListButton" model="Model.MaterialTypeId" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
