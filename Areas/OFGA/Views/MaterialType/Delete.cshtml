@model SYGESTMunicipal.Areas.OFGA.Models.MaterialType
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Eliminar tipo de material</h2>

                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="MaterialType" asp-action="Index">Lista de tipo de materiales</a></li>
                <li>Tipo de materiales</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->
    <br />
    <br />
    <h2 class="text-info">Eliminar a este tipo de material?</h2>
    <br />
    <form method="post" asp-action="Delete">
        <div class="border backgroundWhite">
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="MaterialTypeId" class="col-form-label"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="MaterialTypeId" class=" form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="MaterialTypeName" class="col-form-label"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="MaterialTypeName" class=" form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5 colo-lg-4 text-right">
                    <input onclick="abrirModal()" type="submit" value="Eliminar" id="btnEliminar"
                           class="btn btn-danger" @*style="width: 80%;"*@
                           asp-route-id="@Model" />
                </div>
                <br />
                <br />
                <br />
                <div class="col-md-5">
                    <a asp-action="Index" type="button"
                       class="btn btn-success">Regresar </a>
                </div>
            </div>

        </div>
    </form>
    </main>