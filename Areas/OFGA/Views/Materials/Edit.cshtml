@model SYGESTMunicipal.Areas.OFGA.Models.Materials
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaTMaterial;
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Editar material</h2>

                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Materials" asp-action="Index">Materiales</a></li>
                <li>Editar Materiales</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Editar
            </h3>
        </div>
    </div>
    <br />

    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form asp-action="Edit" asp-controller="Materials" method="post" id="viewEditar">
                    <div class="container-fluid">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*Id*@
                        @*<div class=" form-group row">
                                <div class=" col-2">
                                    <label asp-for="Id" class="col-form-label"></label>
                                </div>
                                <div class="col-5">
                                    <input asp-for="Id" class="form-control" />
                                </div>
                                <span asp-validation-for="Id" class=" text-danger"></span>
                            </div>*@
                        @*Name*@
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Name" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class=" text-danger"></span>
                        </div>

                        @*fecha ingreso*@
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Date" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-8">
                                <input asp-for="Date" type="text" id="datepicker" class="form-control" />
                            </div>
                        </div>
                        @*Peso*@
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Weight" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-9">
                                <input asp-for="Weight" class="form-control" />
                            </div>
                            <span asp-validation-for="Weight" class=" text-danger"></span>
                        </div>
                        @*color*@
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Color" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-9">
                                <input asp-for="Color" class="form-control" />
                            </div>
                            <span asp-validation-for="Color" class=" text-danger"></span>
                        </div>
                        @*Material Type*@
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="MaterialTypeId" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-8">
                                <select asp-for="MaterialTypeId" class="form-control"
                                        asp-items="@Lista"></select>
                            </div>
                            <span asp-validation-for="MaterialTypeId" class="text-danger"></span>
                        </div>
                        <div class=" form-group row">
                            <div class=" col-md-5">
                                <partial name="_EditAndBackToListButton" model="Model.Id" />
                            </div>
                        </div>
                    </div>
                </form>
    </div>
            </div>
        </div>
</main>
    @section Scripts{
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.js"></script>



        <script src="~/js/DPickerSpanish.js"></script>
        <script>
            $(function () {
                $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' }).val();
                $("#datepicker").datepicker({ minDate: 0, maxDate: "+1W" });
                //$("#timepicker").timepicker({ minTime: '11:00 AM', maxTime: '9:00 PM', step: '30' })
            });</script>
    }

