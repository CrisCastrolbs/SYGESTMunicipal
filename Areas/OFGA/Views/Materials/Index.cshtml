@model IEnumerable<MaterialsViewModel>
@using SYGESTMunicipal.Areas.OFGA.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Materiales</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Home" asp-action="Index">Gestión Ambiental</a></li>
                <li>Materiales</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Lista de Materiales</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        @*//Vista del filtro*@
        @*<div class="row">
            <div class="col-12 text-right">
                <partial name="_Filter" />
            </div>
        </div>*@

        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover .table-responsive" id="TbSolidWaste">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">

                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Date)</th>
                            <th>@Html.DisplayNameFor(m => m.Weight)</th>

                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>@Html.DisplayFor(m => item.Id)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Date)</td>
                            <td>@Html.DisplayFor(m => item.Weight)</td>

                            <a>
                                <partial name="_TableButtonPartial" model="item.MaterialTypeId" />
                            </a>

                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h5 style="color:red;">No se encontraron registros!...</h5>
            }
        </div>
    </div>
    </main>