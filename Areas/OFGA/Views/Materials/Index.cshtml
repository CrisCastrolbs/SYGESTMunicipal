@using SYGESTMunicipal.Utility
@model IEnumerable<MaterialsViewModel>
@using SYGESTMunicipal.Areas.OFGA.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Materiales</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Home" asp-action="Index">Gestión Ambiental</a></li>
                <li>Materiales</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="border backgroundWhite">
        <br />
        @if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFGA))
        {

            <form asp-controller="Materials" asp-action="Index" method="post">
                <div class="row">
                    <div class="col-lg-2 text-right">
                        <a asp-action="Create" class="btn btn-info fa fa-plus-circle"
                           style="width:80%; height:100%;padding:12px;">
                            Agregar Material
                        </a>
                    </div>
                    @*<div class="col-md-2 col-lg-2 text-right">
                            <a asp-controller="" asp-action="Index"
                               class="btn btn-info fa fa-arrow-circle-left"
                               style="width:100%; height:90%;padding:6px;">
                                Regresar al menú
                            </a>
                        </div>*@
                </div>
                <div class="col-md-12" style="color:black;"><hr /></div>
            </form>


            @if (Model.Count() > 0)
            {
                <table class="table table-hover .table-responsive" id="TbMaterials">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">

                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Date)</th>
                            <th>@Html.DisplayNameFor(m => m.Weight)</th>

                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(m => item.Id)</td>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Date)</td>
                                <td>@Html.DisplayFor(m => item.Weight)</td>

                                <div class="col-lg-6 text-right">
                                    <partial name="_TableButtonPartialDelete" model="item.Id" />

                                </div>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h5 style="color:red;">No se encontraron registros!...</h5>
            }
        
    }
        </div>
    </main>