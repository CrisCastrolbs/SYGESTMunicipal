@model SYGESTMunicipal.Areas.OFGA.Models.PersonOFGA
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}


<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Detalle de Persona Registrada</h2>

                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="PersonOFGA" asp-action="Index">Registro de Persona</a></li>
                <li>Detalle</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles
            </h3>
        </div>
    </div>
    <br />
    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
        <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Details">
                    <div class="backgroundWhite">
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="PersonOFGAId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PersonOFGAId" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Name" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Name" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="LastName1" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="LastName1" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="LastName2" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="LastName2" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Address" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <textarea asp-for="Address" readonly rows="4" cols="50"
                                          class="form-control"> </textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Province" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Province" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Canton" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Canton" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="District" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="District" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="TelephoneNumber" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="TelephoneNumber" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="CellphoneNumber" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="CellphoneNumber" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Email" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Email" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-5 col-lg-5 text-right">
                                <input onclick="abrirModal()" type="submit" value="Eliminar" id="btnEliminar"
                                       class="btn btn-danger" @*style="width: 80%;"*@
                                       asp-route-id="@Model" />
                            </div>
                            <br />
                            <br />
                            <br />
                            <div class="col-md-5 text-center">
                                <a asp-action="Index" type="button"
                                   class="btn btn-success">Regresar </a>
                            </div>
                        </div>


                    </div>
                </form>
            </div>
        </div>
        </div>
</main>