@model SYGESTMunicipal.Areas.OFGA.Models.SolidWaste
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Detalles del Registro</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Complaint" asp-action="Index">Residuos Ordinarios</a></li>
                <li>Detalles del Registro</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles
            </h3>
        </div>
    </div>
    <br />
    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Details">
                    <div class="backgroundWhite">
                        <div class="form-group row">
                            <div class="col-2">
                                <h5><label asp-for="SolidWasteId" class="col-form-label"></label></h5>
</div>
                            <div class="col-9">
                                <input asp-for="SolidWasteId" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <h5><label asp-for="Weight" class="col-form-label"></label></h5>
</div>
                            <div class="col-9">
                                <input asp-for="Weight" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="EntryDate" class="col-form-label"></label></h5>
</div>
                            <div class="col-md-8">
                                <input asp-for="EntryDate" readonly type="datetime" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-5 offset-2">
                                <partial name="_DetailsAndBackToListButton" model="Model.SolidWasteId" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
     </div>
    </div>
</main>


