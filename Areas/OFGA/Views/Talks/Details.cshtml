@model SYGESTMunicipal.Areas.OFGA.Models.Talks
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Detalles de charlas</h2>

                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="Talks" asp-action="Index">Lista de Charlas</a></li>
                <li>Charlas</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Detalles
            </h3>
        </div>
    </div>
    <br />

    <div class="backgroundWhite row">
        <div class="col-4 border align-self-baseline">

            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64, {0}", base64);
            }
            <img src="@imgsrc" style="height: 100%; width:110%" />
        </div>
        <div class="col-lg-6 pt-3 pt-lg-0 content">
            <div class="container">
                <br />
                <br />
                <div class="breadcrumb-hero text-md-center">
                    <h2>Detalles de charlas Registradas</h2>
                </div>
            </div>
            <br />
            <br />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-3 text-right">
                        <h5><label asp-for="Name" class="custom-label">Nombre: </label></h5>
</div>
                    <div class="col-7 text-right">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 text-right">
                        <h5><label asp-for="Description" class="custom-label">Descripción: </label></h5>
                    </div>
                    <div class="col-md-9 col-lg-9">
                        <textarea asp-for="Description" readonly rows="4" cols="50"
                                  class="form-control"> </textarea>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-3 text-right">
                        <h5><label asp-for="Date" class="col-form-label">Fecha: </label></h5>
</div>
                    <div class="col-7 text-right">
                        <input asp-for="Date" readonly type="datetime" class="form-control" />
                    </div>
                </div>
            </fieldset>
            <br />
            <div class="form-group row">
                <div class="col-6 offset-5">
                    <partial name="_DetailsAndBackToListButton" model="@Model.Id" />
                </div>
            </div>
        </div>
    </div>
</main>