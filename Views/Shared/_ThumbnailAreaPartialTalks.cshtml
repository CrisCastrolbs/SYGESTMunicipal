@using SYGESTMunicipal.Areas.OFGA.Models
@model IEnumerable<Talks>
@if (Model.Count() > 0)
{
    <div class="col-md-12 post @Model.FirstOrDefault().Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success"> @Model.FirstOrDefault().Name </h3>
        </div>
        <div class="row d-flex col-md-12">

            @foreach (var item in @Model)
            {

                <div class="col-md-5 d-flex ftco-animate border border-info"
                     style="margin-bottom:10px; margin-top:15px; margin-left:15px ;padding:5px; background-color:white">
                    <div class="row">
                        <div class="col-md-3 col-md-12">

                            @{
                                var base64 = Convert.ToBase64String(item.Picture);
                                var imgsrc = string.Format("data:image/jpg;base64, {0}", base64);
                            }
                            <img src="@imgsrc" class="block-20" style="width:100%; border:5px;border: 1px solid #bbb9b9;" />
                        </div>

                        <div class="col-md-9 col-md-12">
                            <br />
                            <div class="row col-md-12 text-justify d-none d-md-block">
                                <p>Nombre: </p>
                                <h5>@item.Name</h5>
                            </div>

                           

                            <div class="col-md-12 text-right">
                                <p>Fecha y Hora:</p>
                                <h5>@item.Date</h5>
                            </div>


                            <div class="col-md-7 col-md-5 offset-md-5 text-center">
                                <a asp-action="Details" class="btn btn-primary" style="width: 100%;" asp-route-id="@item.Id">Detalles</a>
                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>

        <div class="p-4"></div>
    </div>
}
